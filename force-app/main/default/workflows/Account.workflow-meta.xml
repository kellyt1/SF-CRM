<?xml version="1.0" encoding="UTF-8" ?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Update_Account_Phone</fullName>
        <description>Updates the Account.Phone field</description>
        <field>Phone</field>
        <formula>IF(NOT(ISBLANK(PersonMobilePhone)), PersonMobilePhone, 
  IF(NOT(ISBLANK(PersonHomePhone)), PersonHomePhone, 
   IF(NOT(ISBLANK(PersonOtherPhone)), PersonOtherPhone, NULL)))</formula>
        <name>Update Account Phone</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Update Phone</fullName>
        <actions>
            <name>Update_Account_Phone</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description
        >Updates the Account.Phone based on the Person phone values</description>
        <formula
        >OR(ISCHANGED(PersonMobilePhone),  				ISCHANGED(PersonHomePhone), 				ISCHANGED(PersonOtherPhone))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
